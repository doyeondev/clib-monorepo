# 환경 설정
NODE_ENV=development

# 클라우드 데이터베이스 설정
# MySQL 설정 (AWS RDS)
MYSQL_HOST=your-mysql-host.region.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_USERNAME=db_username
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=database_name

# PostgreSQL 설정 (AWS RDS)
DB_CLIENT=pg
DB_HOST=your-postgres-host.region.rds.amazonaws.com
DB_PORT=5432
DB_DATABASE=database_name
DB_USER=db_username
DB_PASSWORD=your_password_here

# ElasticSearch 설정 (AWS Elasticsearch)
ELASTICSEARCH_NODE=your-es-endpoint.region.amazonaws.com
ELASTICSEARCH_USERNAME=es_username
ELASTICSEARCH_PASSWORD=your_password_here

# JWT 설정
JWT_SECRET=replace_with_your_secure_jwt_secret
JWT_EXPIRES_IN=7d

# Directus 관리자 계정 (docker-compose.yml 사용시)
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=your_secure_password_here 