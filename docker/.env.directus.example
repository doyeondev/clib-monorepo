# Directus 환경 변수 예시 파일
# 실제 사용시 이 파일을 .env.directus로 복사하고 값을 수정하세요

# 데이터베이스 연결 설정
DB_CLIENT=pg
DB_HOST=your-postgres-host.region.rds.amazonaws.com
DB_PORT=5432
DB_DATABASE=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_SSL={"rejectUnauthorized":false}

# 보안 키 (실제 사용시 새로 생성해야 함)
KEY=random_generated_key_replace_me
SECRET=random_generated_secret_replace_me_it_should_be_very_long_and_secure

# Directus 관리자 계정
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=your_secure_admin_password 