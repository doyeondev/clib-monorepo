		"prettier": "^3.0.3",
		"storybook": "^8.6.12",
		"turbo": "latest",
		"typescript": "^5.2.2",
		"vite": "^6.3.2",
		"vitest": "^3.1.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.0",
		"@radix-ui/react-tooltip": "^1.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"korean-regexp": "^1.0.13",
		"react": "^19.1.0",
